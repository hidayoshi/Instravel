<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'shared/avatar', object: @user %>
      <p class="font-weight-bold"><%= @user.name %></p>
      <p><%= pluralize(@user.imageposts.count, "post") %></p>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.imageposts.any? %>
      <ol class="imageposts">
        <%= render @imageposts %>
      </ol>
    <% end %>
  </div>
</div>
