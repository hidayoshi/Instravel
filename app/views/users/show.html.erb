<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'users/avatar' %>
      <p><%= @user.name %></p>
      <p>Posts (<%= @user.imageposts.count %>)</p>
      <%= link_to "Settings", edit_user_path(current_user) %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
    <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.imageposts.any? %>
      <ol class="imageposts">
        <%= render @imageposts %>
      </ol>
    <% end %>
    </div>
</div>